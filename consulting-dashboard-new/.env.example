# Environment variables for Consulting Dashboard Prototype
# Copy this file to .env and update the values as needed

# Database URLs for each microservice
# For prototype/development, these SQLite file paths work as-is
# For production, replace with actual database connection strings

# Core service (authentication, users)
DATABASE_URL="file:./dev.db"

# Project management service
PROJECT_DATABASE_URL="file:./prisma/project-service/data/project.db"

# Resource management service (teams, skills)
RESOURCE_DATABASE_URL="file:./prisma/resource-service/data/resource.db"

# Timesheet service
TIMESHEET_DATABASE_URL="file:./prisma/timesheet-service/data/timesheet.db"

# Notification service
NOTIFICATION_DATABASE_URL="file:./prisma/notification-service/data/notification.db"

# Next.js configuration
# For development/prototype, these default values work as-is
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Optional: Add these for production deployment
# NODE_ENV="production"
# NEXT_PUBLIC_API_URL="https://your-api-domain.com"