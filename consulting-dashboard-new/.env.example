# Vercel環境変数テンプレート

# Next.js環境
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# Vercel固有環境変数（自動設定）
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app
# VERCEL_REGION=iad1

# データベース設定
DATABASE_URL="file:./prisma/auth-service/data/auth.db"
PROJECT_DATABASE_URL="file:./prisma/project-service/data/project.db"
RESOURCE_DATABASE_URL="file:./prisma/resource-service/data/resource.db"
TIMESHEET_DATABASE_URL="file:./prisma/timesheet-service/data/timesheet.db"
NOTIFICATION_DATABASE_URL="file:./prisma/notification-service/data/notification.db"
FINANCE_DATABASE_URL="file:./prisma/finance-service/data/finance.db"
KNOWLEDGE_DATABASE_URL="file:./prisma/knowledge-service/data/knowledge.db"
PARASOL_DATABASE_URL="file:./prisma/parasol-service/data/parasol.db"

# セキュリティ設定
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=https://your-app.vercel.app

# API設定
API_TIMEOUT=30000
API_RATE_LIMIT=100

# ログ設定
LOG_LEVEL=error
ENABLE_MONITORING=true

# キャッシュ設定
ENABLE_CACHE=true
CACHE_TTL=3600