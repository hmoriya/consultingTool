# Environment variables for Consulting Dashboard
# Copy this file to .env and update the values as needed

# Database URLs for each microservice
# For prototype/development, these SQLite file paths work as-is
# For production, replace with actual database connection strings
# ⚠️ WARNING: Only 8 databases are allowed - no duplicates!

# Auth service (authentication, users, sessions)
AUTH_DATABASE_URL="file:./prisma/auth-service/data/auth.db"

# Project management service
PROJECT_DATABASE_URL="file:./prisma/project-service/data/project.db"

# Resource management service (teams, skills)
RESOURCE_DATABASE_URL="file:./prisma/resource-service/data/resource.db"

# Timesheet service
TIMESHEET_DATABASE_URL="file:./prisma/timesheet-service/data/timesheet.db"

# Notification service
NOTIFICATION_DATABASE_URL="file:./prisma/notification-service/data/notification.db"

# Knowledge service
KNOWLEDGE_DATABASE_URL="file:./prisma/knowledge-service/data/knowledge.db"

# Finance service
FINANCE_DATABASE_URL="file:./prisma/finance-service/data/finance.db"

# Parasol service (Domain Language Definitions)
PARASOL_DATABASE_URL="file:./prisma/parasol-service/data/parasol.db"

# JWT Secret
# For production, use a secure random string
JWT_SECRET="your-secret-key-here"

# Next.js configuration
# For development/prototype, these default values work as-is
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Optional: Add these for production deployment
# NEXT_PUBLIC_API_URL="https://your-api-domain.com"