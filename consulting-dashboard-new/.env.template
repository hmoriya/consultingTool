# Environment variables for Consulting Dashboard
# Copy this file to .env and update the PROJECT_ROOT path to match your local environment

# Database URLs for each microservice
# Replace PROJECT_ROOT with your actual project path

# Core service (authentication, users) - DEPRECATED, use AUTH_DATABASE_URL
DATABASE_URL="file:PROJECT_ROOT/prisma/dev.db"
CORE_DATABASE_URL="file:./prisma/core-service/data/core.db"

# Auth service (authentication, users, sessions)
AUTH_DATABASE_URL="file:PROJECT_ROOT/prisma/dev.db"

# Project management service
PROJECT_DATABASE_URL="file:PROJECT_ROOT/prisma/project-service/data/project.db"

# Resource management service (teams, skills)
RESOURCE_DATABASE_URL="file:PROJECT_ROOT/prisma/resource-service/data/resource.db"

# Timesheet service
TIMESHEET_DATABASE_URL="file:PROJECT_ROOT/prisma/timesheet-service/data/timesheet.db"

# Notification service
NOTIFICATION_DATABASE_URL="file:PROJECT_ROOT/prisma/notification-service/data/notification.db"

# JWT Secret
# For production, use a secure random string
JWT_SECRET="your-secret-key-here"

# Next.js configuration
# For development/prototype, these default values work as-is
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Optional: Add these for production deployment
# NEXT_PUBLIC_API_URL="https://your-api-domain.com"