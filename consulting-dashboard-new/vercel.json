{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, stale-while-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/dashboard/executive",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/dashboard/Client",
      "destination": "/dashboard/client"
    },
    {
      "source": "/dashboard/Executive", 
      "destination": "/dashboard/executive"
    },
    {
      "source": "/dashboard/PM",
      "destination": "/dashboard/pm"
    },
    {
      "source": "/dashboard/Consultant",
      "destination": "/dashboard/consultant"
    }
  ]
}